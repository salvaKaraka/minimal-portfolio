---
import HTMLIcon from "../icons/HTML.astro";
import CSSIcon from "../icons/CSS.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";
import PHPIcon from "../icons/PHP.astro";
import GitHubIcon from "../icons/GitHub.astro";
import NetworkIcon from "../icons/Network.astro";
import PythonIcon from "../icons/Python.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-red-500/70 dark:bg-red-500/20 text-white",
        icon: HTMLIcon,
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-500/70 dark:bg-blue-500/20 text-white",
        icon: CSSIcon,
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-yellow-500/70 dark:bg-yellow-500/20 text-white",
        icon: JavaScriptIcon,
    },
    PHP: {
        name: "PHP",
        class: "bg-purple-500/70 dark:bg-purple-500/20 text-white",
        icon: PHPIcon,
    },
    PYTHON: {
        name: "Python",
        class: "bg-blue-500/90 dark:bg-blue-500/20 text-white",
        icon: PythonIcon,
    },
};

const PROJECTS = [
    {
        title: "City Bell Verde - Alquiler de Cabañas",
        description:
            "Creado desde cero utilizando únicamente HTML, CSS, JavaScript y PHP. Con un SEO optimizado y un buen rendimiento.",
        link: "https://citybellverde.com",
        github: "https://github.com/salvaKaraka/CityBellVerde",
        image: "/projects/citybellverde.webp",
        alt: "captura de pantalla del sitio citybellverde.com",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript, TAGS.PHP],
    },
    {
        title: "Background Notes - Tus notas como fondo de pantalla",
        description:
            "Desarrollé este sencillo programa en 2021, cuando no era capaz de recordar mis tareas. Hace que mis notas estén siempre presentes en mi fondo de pantalla. No sé si es realmente útil, pero fue divertido hacerlo! :D",
        github: "https://github.com/salvaKaraka/Background_Notes",
        image: "/projects/Background-Notes.webp",
        alt: "captura de pantalla de la aplicacion Background Notes",
        tags: [TAGS.PYTHON],
    },
    {
        title: "Chatbot - Habla conmigo",
        description:
            "Un chatbot personalizado para responder preguntas acerca de mi trabajo. Desarrollado utilizando la API de Co:Here",
        link: "https://coherechatbot.vercel.app",
        github: "https://github.com/salvaKaraka/cohere-chatbot",
        image: "/projects/cohere-chatbot.webp",
        alt: "captura de pantalla de la pagina del chatbot",
        tags: [TAGS.PYTHON],
    },
];
---

{
    PROJECTS.map(({ image, title, description, tags, alt, link, github }) => (
        <article class="mb-10">
            <h3 class="text-2xl font-semibold text-purple-800/90 dark:text-purple-400/90 mb-2">
                {title}
            </h3>
            <p class="text-lg text-pretty mb-3">{description}</p>

            <ul class="flex flex-wrap">
                {tags.map((tag) => (
                    <li>
                        <span
                            class={`font-semibold flex flex-row gap-x-2 rounded px-3 py-2 items-center mr-4 mb-4 text-xs ${tag.class}`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>

            <img
                class="rounded shadow-2xl shadow-black/10 black:shadow-white/10 mb-4 mt-1"
                src={image}
                alt={alt}
            />

            <div class="font-semibold flex flex-row gap-x-4">
                {link && (
                    <a
                        class="border border-black/10 bg-black/5 hover:bg-black/10 dark:border-white/5 dark:bg-white/10 dark:hover:bg-white/30
    rounded-full
    inline-flex justify-center items-center gap-x-2
    py-1 px-2 md:py-2 md:px-4
    text-xs md:text-base
    transition
    hover:scale-110"
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <NetworkIcon class="size-6" />
                        <span>Visitar</span>
                    </a>
                )}

                <a
                    class="border border-black/10 bg-black/5 hover:bg-black/10 dark:border-white/5 dark:bg-white/10 dark:hover:bg-white/30
    rounded-full
    inline-flex justify-center items-center gap-x-2
    py-1 px-2 md:py-2 md:px-4
    text-xs md:text-base
    transition
    hover:scale-110"
                    href={github}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <GitHubIcon class="size-6" />
                    <span>Ver código</span>
                </a>
            </div>
        </article>
    ))
}
